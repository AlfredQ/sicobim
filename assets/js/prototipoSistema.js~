			$("#msgSalida").dialog(
			{
				title: "Salir de la aplicacion.",
				resizable: false,
				bgiframe:true,
				autoOpen: false,
				modal: true,
				buttons:
				{
					"No": function() 
					{
						$(this).dialog('close');
					}
					,
					"Si": function()
					{
						$(this).dialog('close');
						location="../../index.php";
						//location="../controlador/sesion.php?salir=cerrar";
					}
				}
			}).html("\u00BFDesea realmente salir de la aplicaci\u00f3n?");
	
	
